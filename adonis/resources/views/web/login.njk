<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <title>Admin</title>

    <link rel="icon" href="/assets/favicon.ico" type="image/x-icon">
    <!-- Google Fonts -->

    <link rel="stylesheet" type="text/css" href="/assets/dist/web/style/main.css">
</head>

<body class="login-page">
    <div class="login-box">
        <div class="logo">
            <a href="javascript:void(0);">Admin</a>
        </div>
        <div class="card" id="login">
            <div class="body">
                <vue-form :state="formState" v-model="formState" @submit.prevent="login()">
                    <div class="msg">Đăng nhập</div>
                    <validate auto-label class="input-group" name="username">
                        <span class="input-group-addon">
                            <i class="material-icons">person</i>
                        </span>
                        <div class="form-line">
                            <input type="text" class="form-control" name="username" placeholder="Tên đăng nhập" v-model="data.username" required autofocus>
                        </div>
                    </validate>

                    <field-messages auto-label name="username" show="$submitted" class="color-danger form-group">
                        <p slot="required">Chưa nhập tên đăng nhập.</p>
                    </field-messages>

                    <validate auto-label class="input-group" name="password">
                        <span class="input-group-addon">
                            <i class="material-icons">lock</i>
                        </span>
                        <div class="form-line">
                            <input type="password" class="form-control" name="password" placeholder="Mật khẩu" v-model="data.password" required>
                        </div>
                    </validate>

                    <field-messages auto-label name="password" show="$submitted" class="color-danger form-group">
                        <p slot="required">Chưa nhập mật khẩu.</p>
                    </field-messages>

                    <div class="row">
                        <div class="col-xs-12">
                            <button class="btn btn-block bg-pink waves-effect" type="submit" :disabled="formState.$invalid && formState.$submitted">ĐĂNG NHẬP</button>
                        </div>
                    </div>
                </vue-form>
            </div>
        </div>
    </div>
    {% include "web/layout/partial/master/footer.njk" %}
</body>

</html>