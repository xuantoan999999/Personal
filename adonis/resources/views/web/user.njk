{% extends 'web/layout/master' %} {% block content %}
<div class="container-fluid">

    <div class="row">
        <div class="col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>Người dùng</h2>
                </div>
                <div class="body" id="user">
                    <button class="btn btn-success waves-effect">
                        <i class="material-icons">add</i>
                        <span>Thêm</span>
                    </button>
                    <div class="row">
                        <div class="col-xs-4 text-center">
                            <strong>Tên</strong>
                        </div>
                        <div class="col-xs-4 text-center">
                            <strong>Email</strong>
                        </div>
                        <div class="col-xs-4 text-center">
                            <strong>Action</strong>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="row" v-for="(item,index) in users" v-if="users.length > 0">
                        <div class="col-xs-4">
                            <p v-if="!item.edit" v-text="item.name"></p>
                            <div class="form-group" v-if="item.edit">
                                <div class="form-line">
                                    <input type="text" class="form-control" v-model="item.name">
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-4">
                            <p v-if="!item.edit" v-text="item.email"></p>
                            <div class="form-group" v-if="item.edit">
                                <div class="form-line">
                                    <input type="text" class="form-control" v-model="item.email">
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-4">
                            <div v-if="!item.edit && !item.delete">
                                <button class="waves-effect btn btn-primary" @click="showEdit(item, index)">
                                    <i class="material-icons">edit</i>
                                    <span>Sửa</span>
                                </button>
                                <button class="waves-effect btn btn-danger" @click="showDelete(item, index)">
                                    <i class="material-icons">delete</i>
                                    <span>Xóa</span>
                                </button>
                                <button class="waves-effect btn btn-warning" @click="showChangePassword(item, index)">
                                    <i class="material-icons">lock</i>
                                    <span>Đổi mật khẩu</span>
                                </button>

                                <vodal :show="item.show" animation="slideDown" :width="modal.width" :close-button="modal.showButton" @hide="item.show = false">
                                    <div class="card">
                                        <div class="header">
                                            <h2>Đổi mật khẩu</h2>
                                        </div>
                                        <div class="body">
                                            <vue-form :state="formstate" v-model="formstate" @submit.prevent="changePassword(item, index)">
                                                <validate auto-label class="form-group">
                                                    <label>Mật khẩu mới</label>
                                                    <div class="form-line">
                                                        <input type="password" name="new_password" class="form-control" required v-model="item.new_password">
                                                    </div>

                                                    <field-messages name="new_password" show="$submitted" class="color-danger">
                                                        <div slot="required">Chưa nhập mật khẩu mới.</div>
                                                    </field-messages>
                                                </validate>

                                                <validate auto-label class="form-group">
                                                    <label>Nhập lại mật khẩu mới</label>
                                                    <div class="form-line">
                                                        <input type="password" name="new_password_confirm" class="form-control" required v-model="item.new_password_confirm">
                                                    </div>

                                                    <field-messages name="new_password_confirm" show="$submitted" class="color-danger">
                                                        <div slot="required">Chưa nhập lại mật khẩu mới.</div>
                                                    </field-messages>
                                                </validate>

                                                <div class="form-group text-right">
                                                    <button class="waves-effect btn btn-success" type="submit">
                                                        <i class="material-icons">edit</i>
                                                        <span>Sửa</span>
                                                    </button>
                                                    <button class="waves-effect btn btn-warning" @click="closeChangePassword(item, index)">
                                                        <i class="material-icons">clear</i>
                                                        <span>Đóng</span>
                                                    </button>
                                                </div>
                                            </vue-form>
                                        </div>
                                    </div>
                                </vodal>
                            </div>
                            <div v-if="item.edit">
                                <button class="waves-effect btn btn-success" @click="update(item, index)">
                                    <i class="material-icons">check</i>
                                    <span>Sửa</span>
                                </button>
                                <button class="waves-effect btn btn-warning" @click="hideEdit(item, index)">
                                    <i class="material-icons">clear</i>
                                    <span>Hủy</span>
                                </button>
                            </div>
                            <div v-if="item.delete">
                                <button class="waves-effect btn btn-warning" @click="remove(item, index)">
                                    <i class="material-icons">delete</i>
                                    <span>Xóa</span>
                                </button>
                                <button class="waves-effect btn btn-success" @click="hideDelete(item, index)">
                                    <i class="material-icons">clear</i>
                                    <span>Hủy</span>
                                </button>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
{% endblock %}